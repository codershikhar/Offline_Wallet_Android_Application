<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorPrimaryLight">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/checkbox" />

    <TextView
        android:id="@+id/textView_moneytransfersucessful"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transfer Successfull"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/textView_monetTO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="Transfered To : Rishabh Jha"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView_monetTO_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="Mobile No : "
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView_moneyAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="Ammount : "
        android:textSize="20dp"/>

</LinearLayout>